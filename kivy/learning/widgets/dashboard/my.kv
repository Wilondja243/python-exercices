#:kivy 2.3.1

<Dashboard>:

    GridLayout:
        cols: 2
        spacing: 10
        padding: 10

        BoxLayout:
            orientation: "vertical"
            spacing: 10
            size_hint: None, 1
            width: 80

            canvas.before:
                Color:
                    rgb: 1, 0.5, 0.8
                Rectangle:
                    pos: self.pos
                    size: self.size
        

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            scroll_distance: 300

            AnchorLayout:
                anchor_y: "top"
                size_hint_y: None

                BoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: self.minimum_height

                    # block 1
                    GridLayout:
                        cols: 4
                        spacing: 15

                        size_hint_y: None
                        height: self.minimum_height

                        Button:
                            text: "Mon premier bouton"
                            size_hint_y: None
                            height: 70

                        Button:
                            text: "Mon deuxieme bouton"
                            size_hint_y: None
                            height: 70

                        Button:
                            text: "Mon troisieme bouton"
                            size_hint_y: None
                            height: 70

                        Button:
                            text: "Mon quatrieme bouton"
                            size_hint_y: None
                            height: 70

                    # Block 2
                    GridLayout:
                        cols: 2
                        spacing: 10
                        padding: [0, 15, 0, 15]
                        size_hint_y: None
                        height: self.minimum_height
                        
                        BoxLayout:
                            size_hint_y: None
                            size_hint_x: 0.65
                            height: 250

                            canvas.before:
                                Color:
                                    rgb: 0.2, 0.9, 0.3
                                Rectangle:
                                    pos: self.pos
                                    size: self.size
                            
                            AnchorLayout:
                                anchor_y: "top"
                                anchor_x: "left"

                                Button:
                                    text: "User Account"
                                    size_hint: 1, 0.2
                                    pos_hint: {'x': -0, 'y': 0}
                            
                            AnchorLayout:
                                anchor_y: "top"
                                anchor_x: "left"

                                Button:
                                    text: "User Account"
                                    size_hint: 1, 0.2
                                    pos_hint: {'x': -0, 'y': 0}

                        BoxLayout:
                            size_hint_y: None
                            size_hint_x: 0.35
                            height: 250
                            
                            canvas.before:
                                Color:
                                    rgb: 0.5, 0.5, 0.7
                                Rectangle:
                                    pos: self.pos
                                    size: self.size

                            Button:
                                text: "Statistic"
                                size_hint: 0.6, None
                                height: 50
                                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    
                    # Block2
                    GridLayout:
                        cols: 4
                        spacing: 15
                        padding: [0, 30, 0, 0]

                        size_hint_y: None
                        height: self.minimum_height

                        Button:
                            text: "Mon premier bouton"
                            size_hint_y: None
                            height: 70

                        Button:
                            text: "Mon deuxieme bouton"
                            size_hint_y: None
                            height: 70

                        Button:
                            text: "Mon troisieme bouton"
                            size_hint_y: None
                            height: 70

                        Button:
                            text: "Mon quatrieme bouton"
                            size_hint_y: None
                            height: 70
                    

                    GridLayout:
                        cols: 2
                        spacing: 10
                        padding: [0, 15, 0, 15]
                        
                        BoxLayout:
                            size_hint_y: None
                            size_hint_x: 0.65
                            padding: 20
                            spacing: 10
                            height: self.minimum_height

                            canvas.before:
                                Color:
                                    rgb: 0.2, 0.9, 0.3
                                Rectangle:
                                    pos: self.pos
                                    size: self.size
                            
                            AnchorLayout:
                                anchor_y: "top"
                                anchor_x: "left"

                                Button:
                                    text: "User Account"
                                    size_hint: 1, None
                                    size_hint_y: 50
                            
                            AnchorLayout:
                                anchor_y: "top"
                                anchor_x: "left"

                                Button:
                                    text: "User Account"
                                    size_hint: 1, None
                                    size_hint_y: 50

                        BoxLayout:
                            size_hint_y: None
                            size_hint_x: 0.35
                            padding: 20
                            height: self.minimum_height
                            
                            canvas.before:
                                Color:
                                    rgb: 0.5, 0.5, 0.7
                                Rectangle:
                                    pos: self.pos
                                    size: self.size

                            AnchorLayout:
                                anchor_x: "left"
                                anchor_y: "top"

                                Button:
                                    text: "Statistic"
                                    size_hint: 1, None
                                    height: 50
                    
                            
