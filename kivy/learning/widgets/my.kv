#:kivy 2.3.1

<MyWidget>:
    StackLayout:
        orientation: "tb-lr"

        GridLayout:
            cols: 4
            size_hint: 1, None
            height: self.minimum_height

            Button:
                text: "Bouton A"
                size_hint: 1, None
                height: 50
            
            Button:
                text: "Bouton B"
                size_hint: 1, None
                height: 50

            Button:
                text: "Bouton C"
                size_hint: 1, None
                height: 50

            Button:
                text: "Bouton D"
                size_hint: 1, None
                height: 50

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, None
            height: 50
            pos_hint: {'x': 0, 'y': 1}

            canvas.before:
                Color:
                    rgb: 1, .3, .4, .9
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "wooooo" if switch.active else ""
                halign: "left"
                valign: "middle"
                text_size: self.size

            Switch:
                id: switch
                halign: "right"
                valign: "middle"
                size: self.size

