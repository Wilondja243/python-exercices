#:kivy 2.3.1

#: import Factory kivy.factory.Factory


<MyPopup@Popup>:
    auto_dismiss: False
    title: 'my popup'

    BoxLayout:
        orientation: 'vertical'

        Button:
            text: "close me"
            size_hint: None, None
            size: 100, 50
            on_release: root.dismiss()

<TestSpinner>:
    BoxLayout:
        orientation: 'vertical'

        AnchorLayout:
            anchor_x: "left"
            anchor_y: "top"

            Spinner:
                size_hint: None, None
                size: 100, 40
                pos_hint: {'center':(.5, .5)}
                text: 'home'
                values: ['projects', 'services', 'contact']
                on_press: print("The spinner {} has text {}".format(self, self.text))

        ProgressBar:
            value: 50
            max: 100
        
        Button:
            text: "open popup"
            on_release: Factory.MyPopup().open()